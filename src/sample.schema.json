{
  "$id": "http://qped.github.io/schemas/mass.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Configuration for QPED feedback tools for Java.",
  "type": "object",
  "title": "The MASS configuration",
  "additionalProperties": false,
  "properties": {
    "firstName": {
      "title": "First Name",
      "type": "string",
      "minLength": 3,
      "description": "Please enter your first name",
      "default": "Christoph"
    },
    "secondName": {
      "type": "string",
      "minLength": 3,
      "description": "Please enter your second name",
      "title": "Second Name"
    },
    "vegetarian": {
      "type": "boolean",
      "title": "Vegetarian",
      "description": "Are you a vegetarian?",
      "default": false
    },
    "birthDate": {
      "type": "string",
      "format": "date",
      "description": "Please enter your birth date.",
      "title": "Birth Date"
    },
    "nationality": {
      "type": "string",
      "enum": [
        "DE",
        "IT",
        "JP",
        "US",
        "RU",
        "Other"
      ],
      "title": "Nationality",
      "description": "Please enter your **bold text**"
    },
    "provideAddress": {
      "type": "boolean",
      "title": "Want to provide your address?",
      "description": "Specify if you want to provide your address"
    },
    "address": {
      "$ref": "./address.schema.json",
      "title": "Mail Address"
    },
    "vegetarianOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "vegan": {
          "type": "boolean",
          "title": "Vegan",
          "description": "Vegan option"
        },
        "favoriteVegetable": {
          "type": "string",
          "enum": [
            "Tomato",
            "Potato",
            "Salad",
            "Aubergine",
            "Cucumber",
            "Other"
          ],
          "title": "Most favorite Vegetable",
          "description": "Enter Vegetable"
        },
        "otherFavoriteVegetable": {
          "type": "string",
          "title": "Second favorite Vegetable",
          "description": "Enter vegetable"
        }
      },
      "title": "Diet",
      "description": "Select your choice of food",
      "required": [
        "favoriteVegetable",
        "vegan"
      ]
    }
  },
  "required": [
    "firstName",
    "secondName",
    "vegetarian",
    "birthDate",
    "nationality"
  ]
}